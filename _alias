alias .='source'
alias ls='ls -G'
alias ll='ls -lh'
alias la='ls -A'
alias diff='colordiff -u'
alias cp='cp -i'
alias mv='mv -i'
alias rm='rm -i'
alias g='git'

alias grep='grep --color'
alias cgrep='grep --color=always'

# use alias under sudo
alias sudo='sudo '

